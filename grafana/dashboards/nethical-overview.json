{
  "dashboard": {
    "id": null,
    "uid": "nethical-overview",
    "title": "Nethical Threat Detection Overview",
    "tags": ["nethical", "threat-detection", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "type": "graph",
        "title": "Requests per Second by Detector",
        "targets": [
          {
            "expr": "rate(nethical_requests_total[5m])",
            "legendFormat": "{{detector_type}} - {{status}}",
            "refId": "A"
          }
        ],
        "xaxis": {
          "show": true,
          "mode": "time"
        },
        "yaxes": [
          {
            "label": "req/s",
            "show": true
          },
          {
            "show": false
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": false,
          "current": true,
          "max": true,
          "min": false,
          "values": true
        }
      },
      {
        "id": 2,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "type": "graph",
        "title": "Latency Percentiles",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(nethical_request_latency_seconds_bucket[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(nethical_request_latency_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(nethical_request_latency_seconds_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "xaxis": {
          "show": true,
          "mode": "time"
        },
        "yaxes": [
          {
            "label": "seconds",
            "show": true,
            "format": "s"
          },
          {
            "show": false
          }
        ],
        "lines": true,
        "fill": 0,
        "linewidth": 2,
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "min": false,
          "values": true
        }
      },
      {
        "id": 3,
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 8
        },
        "type": "bargauge",
        "title": "Threats Detected by Type (5m)",
        "targets": [
          {
            "expr": "sum(increase(nethical_threats_detected_total[5m])) by (detector_type)",
            "legendFormat": "{{detector_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 50
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 8
        },
        "type": "gauge",
        "title": "Cache Hit Rate",
        "targets": [
          {
            "expr": "rate(nethical_cache_hits_total[5m]) / (rate(nethical_cache_hits_total[5m]) + rate(nethical_cache_misses_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.5
                },
                {
                  "color": "green",
                  "value": 0.8
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 8
        },
        "type": "stat",
        "title": "Active Detectors",
        "targets": [
          {
            "expr": "sum(nethical_active_detectors)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "type": "graph",
        "title": "Error Rate by Detector",
        "targets": [
          {
            "expr": "rate(nethical_errors_total[5m])",
            "legendFormat": "{{detector_type}} - {{error_type}}",
            "refId": "A"
          }
        ],
        "xaxis": {
          "show": true,
          "mode": "time"
        },
        "yaxes": [
          {
            "label": "errors/s",
            "show": true
          },
          {
            "show": false
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": false,
          "current": true,
          "max": true,
          "min": false,
          "values": true
        },
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0.05],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "High Error Rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 7,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "type": "graph",
        "title": "Model Inference Time (P95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(nethical_model_inference_seconds_bucket[5m]))",
            "legendFormat": "{{model_name}}",
            "refId": "A"
          }
        ],
        "xaxis": {
          "show": true,
          "mode": "time"
        },
        "yaxes": [
          {
            "label": "seconds",
            "show": true,
            "format": "s"
          },
          {
            "show": false
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "min": false,
          "values": true
        }
      },
      {
        "id": 8,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        },
        "type": "heatmap",
        "title": "Request Latency Heatmap",
        "targets": [
          {
            "expr": "rate(nethical_request_latency_seconds_bucket[5m])",
            "format": "heatmap",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ],
        "dataFormat": "tsbuckets",
        "hideZeroBuckets": true,
        "highlightCards": true,
        "color": {
          "mode": "spectrum",
          "cardColor": "#b4ff00",
          "colorScale": "sqrt",
          "exponent": 0.5,
          "colorScheme": "interpolateSpectral"
        }
      },
      {
        "id": 9,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        },
        "type": "graph",
        "title": "Confidence Score Distribution",
        "targets": [
          {
            "expr": "rate(nethical_confidence_score_bucket[5m])",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ],
        "xaxis": {
          "show": true,
          "mode": "time"
        },
        "yaxes": [
          {
            "label": "rate",
            "show": true
          },
          {
            "show": false
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 1,
        "stack": true,
        "legend": {
          "show": true,
          "alignAsTable": false
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "detector_type",
          "type": "query",
          "query": "label_values(nethical_requests_total, detector_type)",
          "multi": true,
          "includeAll": true,
          "allValue": ".*",
          "refresh": 1
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}
