# Regional Configuration - South America East (SÃ£o Paulo)
# Medium-term scalability target configuration
NETHICAL_REGION_ID=sa-east-1
NETHICAL_LOGICAL_DOMAIN=production
NETHICAL_STORAGE_DIR=/data/nethical/sa-east-1

# Medium-term Capacity Settings
# Target: 1,000 sustained RPS, 5,000 peak RPS across 10 regions
# Per-region: ~100 sustained, ~500 peak
NETHICAL_REQUESTS_PER_SECOND=100.0
NETHICAL_PEAK_REQUESTS_PER_SECOND=500.0
NETHICAL_MAX_PAYLOAD_BYTES=1000000

# Agent Capacity
# Target: 10,000 concurrent agents across 10 regions
# Per-region: ~1,000 agents
NETHICAL_MAX_CONCURRENT_AGENTS=1000

# Storage Configuration
# Target: 100M actions across 10 regions
# Per-region: ~10M actions with tiering
NETHICAL_MAX_ACTIONS_STORED=10000000
NETHICAL_ENABLE_STORAGE_TIERING=true
NETHICAL_ENABLE_COMPRESSION=true
NETHICAL_COMPRESSION_LEVEL=6

# Core Features (Always On)
NETHICAL_ENABLE_QUOTA=true
NETHICAL_ENABLE_OTEL=true
NETHICAL_ENABLE_MERKLE_ANCHORING=true
NETHICAL_ENABLE_PERFORMANCE_OPTIMIZATION=true

# Optional Features (Configure per use case)
NETHICAL_ENABLE_ML_SHADOW=true
NETHICAL_ENABLE_ML_BLENDING=true
NETHICAL_ENABLE_ANOMALY_DETECTION=true
NETHICAL_ENABLE_QUARANTINE=true
NETHICAL_ENABLE_TAXONOMY=true
NETHICAL_ENABLE_SLA_MONITORING=true
NETHICAL_ENABLE_AUTO_ESCALATION=true

# Regional Compliance (Brazil LGPD)
NETHICAL_COMPLIANCE_REQUIREMENTS=BRAZIL_LGPD,LATAM_PRIVACY
NETHICAL_DATA_RESIDENCY_POLICY=BRAZIL_STRICT

# Performance Tuning
NETHICAL_WORKER_THREADS=8
NETHICAL_DB_POOL_SIZE=20
NETHICAL_CACHE_SIZE_MB=2048
NETHICAL_BATCH_SIZE=100

# Redis Configuration (for distributed caching)
REDIS_HOST=redis-sa-east-1.cache.local
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL_SECONDS=300

# Monitoring
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector-sa-east-1:4317
OTEL_SERVICE_NAME=nethical-sa-east-1
OTEL_RESOURCE_ATTRIBUTES=region=sa-east-1,env=production,tier=medium-term

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DESTINATION=stdout,file
LOG_FILE=/var/log/nethical/sa-east-1.log

# High Availability
ENABLE_FAILOVER=true
FAILOVER_REGIONS=us-east-1,eu-west-1
HEALTH_CHECK_INTERVAL_SECONDS=30
