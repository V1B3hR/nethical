# Regional Configuration - US Gov West (GovCloud)
NETHICAL_REGION_ID=us-gov-west-1
NETHICAL_LOGICAL_DOMAIN=government
NETHICAL_STORAGE_DIR=/data/nethical/us-gov-west-1

# Capacity Settings - Tier 3 (Compliance/Specialty)
NETHICAL_REQUESTS_PER_SECOND=200.0
NETHICAL_MAX_PAYLOAD_BYTES=1000000

# Auto-scaling Configuration
NETHICAL_AUTO_SCALING_ENABLED=true
NETHICAL_MIN_INSTANCES=1
NETHICAL_MAX_INSTANCES=2
NETHICAL_SCALE_UP_CPU_THRESHOLD=70
NETHICAL_SCALE_DOWN_CPU_THRESHOLD=30

# Core Features (Government Grade)
NETHICAL_ENABLE_QUOTA=true
NETHICAL_ENABLE_OTEL=true
NETHICAL_PRIVACY_MODE=differential
NETHICAL_EPSILON=0.5
NETHICAL_REDACTION_POLICY=aggressive

# Audit & Integrity (Maximum Security)
NETHICAL_ENABLE_MERKLE=true
NETHICAL_ENABLE_ETHICAL_TAXONOMY=true
NETHICAL_ENABLE_SLA_MONITORING=true
NETHICAL_ENABLE_QUARANTINE=true

# ML Features (Shadow Mode Only for Government)
NETHICAL_ENABLE_SHADOW_MODE=true
NETHICAL_ENABLE_ML_BLENDING=false
NETHICAL_ENABLE_ANOMALY_DETECTION=true

# Performance Optimization
NETHICAL_ENABLE_PERFORMANCE_OPTIMIZATION=true

# Multi-Tier Storage (Extended Retention)
NETHICAL_ENABLE_STORAGE_TIERING=true
NETHICAL_HOT_TIER_DAYS=30
NETHICAL_WARM_TIER_DAYS=180
NETHICAL_COLD_TIER_DAYS=730
NETHICAL_ARCHIVE_TIER_YEARS=10
NETHICAL_ENABLE_COMPRESSION=true
NETHICAL_COMPRESSION_LEVEL=9

# Compliance (FedRAMP High)
NETHICAL_DATA_RESIDENCY_POLICY=US_FEDRAMP
NETHICAL_COMPLIANCE_REQUIREMENTS=FedRAMP_High,FIPS_140-2

# Observability
OTEL_EXPORTER=otlp
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector-gov:4318
OTEL_SERVICE_NAME=nethical-us-gov-west-1

# Redis for quota coordination
NETHICAL_REDIS_URL=redis://redis-cluster-gov:6379/0
NETHICAL_ENABLE_REDIS_CACHE=true
NETHICAL_CACHE_TTL_SECONDS=600
