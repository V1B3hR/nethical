# Regional Configuration - AF South 1 (Cape Town, South Africa)
NETHICAL_REGION_ID=af-south-1
NETHICAL_LOGICAL_DOMAIN=production
NETHICAL_STORAGE_DIR=/data/nethical/af-south-1

# Capacity Settings - Tier 3 (Compliance/Specialty)
NETHICAL_REQUESTS_PER_SECOND=200.0
NETHICAL_MAX_PAYLOAD_BYTES=1000000

# Auto-scaling Configuration
NETHICAL_AUTO_SCALING_ENABLED=true
NETHICAL_MIN_INSTANCES=1
NETHICAL_MAX_INSTANCES=2
NETHICAL_SCALE_UP_CPU_THRESHOLD=70
NETHICAL_SCALE_DOWN_CPU_THRESHOLD=30

# Core Features
NETHICAL_ENABLE_QUOTA=true
NETHICAL_ENABLE_OTEL=true
NETHICAL_PRIVACY_MODE=standard
NETHICAL_REDACTION_POLICY=standard

# Audit & Integrity
NETHICAL_ENABLE_MERKLE=true
NETHICAL_ENABLE_ETHICAL_TAXONOMY=true
NETHICAL_ENABLE_SLA_MONITORING=true
NETHICAL_ENABLE_QUARANTINE=true

# ML Features
NETHICAL_ENABLE_SHADOW_MODE=true
NETHICAL_ENABLE_ML_BLENDING=false
NETHICAL_ENABLE_ANOMALY_DETECTION=true

# Performance Optimization
NETHICAL_ENABLE_PERFORMANCE_OPTIMIZATION=true

# Multi-Tier Storage
NETHICAL_ENABLE_STORAGE_TIERING=true
NETHICAL_HOT_TIER_DAYS=7
NETHICAL_WARM_TIER_DAYS=90
NETHICAL_COLD_TIER_DAYS=365
NETHICAL_ENABLE_COMPRESSION=true
NETHICAL_COMPRESSION_LEVEL=6

# Compliance (POPIA - Protection of Personal Information Act)
NETHICAL_DATA_RESIDENCY_POLICY=ZA_POPIA
NETHICAL_COMPLIANCE_REQUIREMENTS=POPIA

# Observability
OTEL_EXPORTER=otlp
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318
OTEL_SERVICE_NAME=nethical-af-south-1

# Redis for quota coordination
NETHICAL_REDIS_URL=redis://redis-cluster:6379/11
NETHICAL_ENABLE_REDIS_CACHE=true
NETHICAL_CACHE_TTL_SECONDS=300
